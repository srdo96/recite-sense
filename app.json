{
  "expo": {
    "name": "ReciteSense",
    "slug": "recite-sense",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "recitesense",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0E8A59"
    },
    "description": "Islamic app that identifies Quran recitations.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.recitesense.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "ReciteSense needs access to your microphone to identify Quran recitations.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0E8A59"
      },
      "package": "com.recitesense.app",
      "permissions": ["RECORD_AUDIO", "INTERNET"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0E8A59"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
